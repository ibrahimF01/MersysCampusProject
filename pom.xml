<build>

    <plugins>
        <plugin><!--derlemek için-->
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>3.0.0-M1</version>
            <configuration>

                <includes>
                    <!-- for  run class or classes  **/:bulunduğu lokasyonu bütün klasörlere göre bulabiliyor   -->
                    <include>**/_02_TestRunnerSpecificFeatures.java</include>
                </includes>
                <testFailureIgnore>true</testFailureIgnore>

            </configuration>
        </plugin>
    </plugins>

</build>

    <profiles>
        <profile>
            <id>Smoke_All</id>
            <build>

                <plugins>
                    <plugin><!--derlemek için-->
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>3.0.0-M1</version>
                        <configuration>

                            <includes>
                                <!-- for  run class or classes  **/:bulunduğu lokasyonu bütün klasörlere göre bulabiliyor   -->
                                <include>**/_07_TestRunnerExtentReport.java</include>
                            </includes>
                            <testFailureIgnore>true</testFailureIgnore>

                        </configuration>
                    </plugin>
                </plugins>

            </build>
        </profile>

        <profile>
            <id>Regression</id>
            <build>

                <plugins>
                    <plugin><!--derlemek için-->
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>3.0.0-M1</version>
                        <configuration>

                            <includes>
                                <!-- for  run class or classes  **/:bulunduğu lokasyonu bütün klasörlere göre bulabiliyor   -->
                                <include>**/_02_TestRunnerSpecificFeatures.java</include>
                            </includes>
                            <testFailureIgnore>true</testFailureIgnore>

                        </configuration>
                    </plugin>
                </plugins>

            </build>
        </profile>

    </profiles>

